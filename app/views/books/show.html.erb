<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Des:</strong>
  <%= @book.des %>
</p>

<p>
  <strong>Isbn:</strong>
  <%= @book.isbn %>
</p>
<h2>Comments</h2>
<% @book.comments.each do |comment| %>
	<p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <%= link_to 	"Destroy Comment", [comment.book, comment], method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>
<h2>Add a comment </h2>
<%= form_for ([@book, @book.comments.build]) do |f| %>
	<p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
